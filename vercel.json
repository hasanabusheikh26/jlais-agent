{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["client/**", "server.js"]
      }
    }
  ],
  "routes": [
    {
      "src": "/token",
      "dest": "/server.js"
    },
    {
      "src": "/session",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
